generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String               @id @default(uuid())
  phone              String               @unique
  name               String
  lastName           String
  gender             String
  helpChatMessages   HelpChatMessages[]
  askForChatMessages AskForChatMessages[]
  reviews            Reviews[]
  profile_picture    String               @default("")
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  orders             Orders[]
  helpChats          HelpChat[]
  askForChats        AskForChat[]
}

model Verify {
  id        Int      @id @default(autoincrement())
  code      String
  phone     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admins {
  id                 Int                  @id @default(autoincrement())
  name               String
  lastName           String
  phone              String               @unique
  role               String
  access             Access[]
  helpChatMessages   HelpChatMessages[]
  askForChatMessages AskForChatMessages[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
}


model Access {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  admins    Admins[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  id             Int                   @id @default(autoincrement())
  price          Int
  product_images String[]
  categories     Categories[]
  sizes          Sizes[]
  colors         Colors[]
  translations   ProductTranslations[]
  discount       Int                   @default(0)
  reviews        Reviews[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
}

model ProductTranslations {
  id          Int      @id @default(autoincrement())
  name        String
  lang        String
  description String
  productId   Int
  product     Products @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Categories {
  id           Int                    @id @default(autoincrement())
  products     Products[]
  translations CategoryTranslations[]
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
}

model CategoryTranslations {
  id         Int        @id @default(autoincrement())
  name       String
  lang       String
  categoryId Int
  category   Categories @relation(fields: [categoryId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Sizes {
  id           Int                @id @default(autoincrement())
  products     Products[]
  translations SizeTranslations[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model SizeTranslations {
  id        Int      @id @default(autoincrement())
  name      String
  lang      String
  sizeId    Int
  size      Sizes    @relation(fields: [sizeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Colors {
  id           Int                 @id @default(autoincrement())
  products     Products[]
  translations ColorTranslations[]
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
}

model ColorTranslations {
  id        Int      @id @default(autoincrement())
  name      String
  lang      String
  colorId   Int
  color     Colors   @relation(fields: [colorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reviews {
  id         Int      @id @default(autoincrement())
  rating     Int
  comment    String
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  product_id Int
  product    Products @relation(fields: [product_id], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Coupons {
  id        Int      @id @default(autoincrement())
  code      String
  discount  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Orders[]
}

model Orders {
  id          Int      @id @default(autoincrement())
  user_id     String
  user        User     @relation(fields: [user_id], references: [id])
  items       Int[]
  total_price Int
  coupon_id   Int?
  coupon      Coupons? @relation(fields: [coupon_id], references: [id])
  status      String   @default("review")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Notifications {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HelpChat {
  id        Int                @id @default(autoincrement())
  members   String[]
  user_id   String
  user      User               @relation(fields: [user_id], references: [id])
  messages  HelpChatMessages[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model HelpChatMessages {
  id        Int      @id @default(autoincrement())
  chat_id   Int
  chat      HelpChat @relation(fields: [chat_id], references: [id])
  sender_id String?
  sender    User?     @relation(fields: [sender_id], references: [id])
  admin_id  Int?
  admin     Admins?  @relation(fields: [admin_id], references: [id])
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AskForChat {
  id        Int                  @id @default(autoincrement())
  members   String[]
  messages  AskForChatMessages[]
  user_id   String
  user      User                 @relation(fields: [user_id], references: [id])
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model AskForChatMessages {
  id        Int        @id @default(autoincrement())
  chat_id   Int
  chat      AskForChat @relation(fields: [chat_id], references: [id])
  sender_id String?
  sender    User?       @relation(fields: [sender_id], references: [id])
  admin_id  Int?
  admin     Admins?    @relation(fields: [admin_id], references: [id])
  message   String
  photo     String?    @default("")
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

