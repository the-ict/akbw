generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String    @id @default(uuid())
  phone           String    @unique
  name            String
  lastName        String
  gender          String
  reviews         Reviews[]
  profile_picture String    @default("")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Verify {
  id        Int      @id @default(autoincrement())
  code      String
  phone     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admins {
  id        Int      @id @default(autoincrement())
  name      String
  lastName  String
  phone     String   @unique
  role      String
  access    Access[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Access {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  admins    Admins[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  id             Int                   @id @default(autoincrement())
  price          Int
  product_images String[]
  categories     Categories[]
  sizes          Sizes[]
  colors         Colors[]
  translations   ProductTranslations[]
  discount       Int                   @default(0)
  reviews        Reviews[]
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
}

model ProductTranslations {
  id          Int      @id @default(autoincrement())
  name        String
  lang        String
  description String
  productId   Int
  product     Products @relation(fields: [productId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Categories {
  id           Int                    @id @default(autoincrement())
  products     Products[]
  translations CategoryTranslations[]
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
}

model CategoryTranslations {
  id         Int        @id @default(autoincrement())
  name       String
  lang       String
  categoryId Int
  category   Categories @relation(fields: [categoryId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}

model Sizes {
  id           Int                @id @default(autoincrement())
  products     Products[]
  translations SizeTranslations[]
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
}

model SizeTranslations {
  id        Int      @id @default(autoincrement())
  name      String
  lang      String
  sizeId    Int
  size      Sizes    @relation(fields: [sizeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Colors {
  id           Int                 @id @default(autoincrement())
  products     Products[]
  translations ColorTranslations[]
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
}

model ColorTranslations {
  id        Int      @id @default(autoincrement())
  name      String
  lang      String
  colorId   Int
  color     Colors   @relation(fields: [colorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reviews {
  id         Int      @id @default(autoincrement())
  rating     Int
  comment    String
  user_id    String
  user       User     @relation(fields: [user_id], references: [id])
  product_id Int
  product    Products @relation(fields: [product_id], references: [id])
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}